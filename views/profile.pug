//-The only password protected webpage on our website
extends layout

block content
  .main.container.clearfix
    .row
      .col-md-8.col-md-offset-2
        h1.display-4
          img.avatar.img-circle.hidden-xs-down(src='/images/avatar.png', alt='avatar')
            //-#{name} and #{favorite} are variable placeholders that, when the template is rendered, 
            //- will be filled with the users name and their favorite book
          | #{name}
        h2.favorite-book Favorite Book
        | #{favorite}
